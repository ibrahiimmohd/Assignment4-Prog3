        <TextBox Name="intText" HorizontalAlignment="Left" Height="23" Margin="280,104,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="doubleText" HorizontalAlignment="Left" Height="23" Margin="280,158,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add to int Array" HorizontalAlignment="Left" Margin="123,103,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click_1"/>
        <Button Content="Add to double Array" HorizontalAlignment="Left" Margin="123,157,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click_2"/>

    </Grid>
</Window>
